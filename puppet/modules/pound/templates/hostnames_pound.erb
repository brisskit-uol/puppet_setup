######################################################################
## global options:

User		"www-data"
Group		"www-data"
#RootJail	"/chroot/pound"

## Logging: (goes to syslog by default)
##	0	no logging
##	1	normal
##	2	extended
##	3	Apache-style (common log format)
LogLevel	5

## check backend every X secs:
Alive		30

## use hardware-accelleration card supported by openssl(1):
#SSLEngine	"<hw>"

# poundctl control socket
Control "/var/run/pound/poundctl.socket"

#i2b2 seems to time out on some queries, this is a temporary hack until
#we can figure out why! 9/3/12
Client 300
TimeOut 300

ListenHTTP
        Address pound
	Port 80
	
	#This adds extra HTTP webDAV verbs. This is needed for opal which uses the OPTIONS one.        
	xHTTP 2
 
	######################################
        #Pages that dont have a favicon generate errors in the log files
        #So link to a temporary one.
        Service
                URL ".+\.ico$"
                Redirect "http://www2.le.ac.uk/favicon.ico"
        End

	######################################
        #Admin portal
        Service
        #        URL "^/admin$|^/admin/+.*"
	        URL "^/admin"

                BackEnd
                        Address camp
                        Port 80
                End
        End
        ######################################

        ######################################
        #caTissue. Note that this pushes :80 to :8080
        Service
		URL "^/catissuecore.*"
#                URL "^/catissuecore$|^/catissuecore/+.*"
                BackEnd
                        Address catissue
                        Port 8080
                End
        End

        Service
                URL "^/civi.catissue.ws*"
                BackEnd
                        Address catissue
                        Port 8080
                End
        End
        ######################################

	######################################
        #civicrm
        Service
                URL "^/civicrm$|^/civicrm/+.*"
                BackEnd
                        Address civicrm
                        Port 80
                End
        End
	######################################

        ######################################
        #i2b2
        Service
                URL "^/i2b2$|^/i2b2/+.*"
                BackEnd
                        Address i2b2
                        Port 80
                End
        End
        ######################################

        ######################################
        #onyx. Note this is pushing :80 to :8080
        Service
                URL "^/onyx$|^/onyx/+.*|^/onyxWS/+.*"
                BackEnd
                        Address onyx
                        Port 8080
                End
        End
        ######################################

        ######################################
        #opal. 
        Service
                URL "^/opal$|^/opal/+.*|^/ws$|^/ws/+.*"
                BackEnd
                        Address opal
                        Port 8080
                End
        End
        ######################################


	######################################
	#API
	##opal
	Service
		URL "^/api/v0/opal/+.*"
		BackEnd
			Address opal
			Port 10000
		End
	End


	######################################



        ######################################
        #Default to camp if nothing else found
        Service
                URL "^/.*"
                BackEnd
                        Address camp
                        Port 80
                End
        End
        ######################################
End

